<UserControl x:Class="xabbo_music.Controls.TimelineButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:xabbo_music.Controls"
             mc:Ignorable="d">
    <Border x:Name="BT_Border" MouseDown="BT_MouseDown" MouseUp="BT_MouseUp" MouseLeave="BT_MouseLeave" Cursor="Hand" BorderThickness="1" Background="#6f9094" CornerRadius="5, 5, 0, 0" BorderBrush="Black" VerticalAlignment="Bottom" HorizontalAlignment="Right">
        <Grid x:Name="BT_Grid">
            <Border x:Name="Highlight_Border1" BorderThickness="2, 2, 0, 0" CornerRadius="5, 5, 0, 0" BorderBrush="#30FFFFFF"/>
            <Border x:Name="Highlight_Border2" BorderThickness="0, 0, 2, 2" CornerRadius="5, 5, 0, 0" BorderBrush="#30000000"/>
        </Grid>
    </Border>
</UserControl>
