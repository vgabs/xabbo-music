<UserControl x:Class="xabbo_music.Controls.InventoryItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:xabbo_music.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40">
    <Border MouseDown="Item_MouseDown" MouseUp="Item_MouseUp" MouseLeave="Item_MouseLeave" Cursor="Hand" Background="#d4dde1" BorderBrush="Black" BorderThickness="1" CornerRadius="5" VerticalAlignment="Top" Width="40" Height="40">
        <Grid SnapsToDevicePixels="True">
            <Image x:Name="Image" Stretch="None"/>
            <Border x:Name="SelectedBorder" Visibility="Hidden" BorderBrush="White" BorderThickness="3" CornerRadius="5"/>
            <Border x:Name="AmountBorder" Background="White" BorderBrush="#2f6982" BorderThickness="1" Height="15" Width="10" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0, 2, 2, 0">
                <TextBlock x:Name="AmountTB" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
