<UserControl x:Class="xabbo_music.Controls.HabboButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:xabbo_music.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Cursor="Hand" MouseDown="Button_MouseDown" MouseUp="Button_MouseUp" MouseLeave="Button_MouseLeave" BorderBrush="#484848" BorderThickness="0, 0, 1, 1" CornerRadius="5" Margin="7,6,7,6">
        <Border BorderBrush="Black" CornerRadius="3" BorderThickness="1, 1, 2, 2">
            <Border x:Name="Button" Background="#e8e8e8" BorderBrush="#b8b8b8" BorderThickness="0, 0, 1, 1" CornerRadius="1">
                <TextBlock x:Name="TextBlock" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
            </Border>
        </Border>
    </Border>
</UserControl>
